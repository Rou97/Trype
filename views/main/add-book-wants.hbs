<div class="wants-container">
  <section class="search-wants">
    <form method="POST" action="/splash/books/add-book-wants/search">
        <input type="text" name="title" class="searchTerm" placeholder="What book would you like? " >
        <button type="submit" class="searchButton">
          <i class="fa fa-search"></i>
        </button>
    </form>
  </section>

  <section class="search-list">
    {{#each results}}
       <article class="search-view">
        <h4>{{this.title}}</h4>
        <img src="{{this.thumbnail}}" alt="">
        {{!-- <p>{{this.industryIdentifiers.1.identifier}}</p>
        <p>{{this.authors}}</p> --}}
        <form method="POST" action="/splash/books/add-book-wants/new">
            <input type="text" name="title" value="{{this.title}}" hidden/>
            <input type="text" name="image" value="{{this.thumbnail}}" hidden/>
            <input type="text" name="ISBN" value="{{this.industryIdentifiers.1.identifier}}"hidden/>
            <input type="text" name="authors" value="{{this.authors}}" hidden/>
            <input type="text" name="subtitle" value="{{this.subtitle}}" hidden/>
            <input type="text" name="description" value="{{this.description}}" hidden/>
            <input type="text" name="language" value="{{this.language}}" hidden/>
            <div class="button-iwant">
                <button type="submit">I want</button>
            </div>
        </form>
        <form method="POST" action="/splash/books/add-book-got/new">
            <input type="text" name="title" value="{{this.title}}" hidden/>
            <input type="text" name="image" value="{{this.thumbnail}}" hidden/>
            <input type="text" name="ISBN" value="{{this.industryIdentifiers.1.identifier}}"hidden/>
            <input type="text" name="authors" value="{{this.authors}}" hidden/>
            <input type="text" name="subtitle" value="{{this.subtitle}}" hidden/>
            <input type="text" name="description" value="{{this.description}}" hidden/>
            <input type="text" name="language" value="{{this.language}}" hidden/>
            <div>
                <button type="submit">I have</button>
            </div>
        </form>
      </article>
    {{/each}}
  </section>
  
</div>
